screenGui.Parent = playerGui

-- Create compact label
local label = Instance.new("TextLabel")
label.Size = UDim2.new(0, 65, 0, 18) -- Smaller size
label.Position = UDim2.new(1, -68, 1, -20) -- Bottom-right corner, flush with edge
